{
    "name": "FumbleNote",
    "version": "1.0.2",
    "description": "A simple text editor that solves issues within Windows generic text editor.",
    "main": "main.js",
    "scripts": {
      "start": "electron-forge start",
      "package": "electron-forge package",
      "make": "electron-forge make",
      "publish": "electron-forge publish"
    },
    "author": "Adam Baker",
    "license": "ISC",
    "dependencies": {
      "electron-squirrel-startup": "^1.0.1",
      "word-count": "^0.2.2"
    },
    "devDependencies": {
      "@electron-forge/cli": "^7.6.0",
      "@electron-forge/maker-dmg": "^7.6.0",
      "@electron-forge/maker-squirrel": "^7.6.0",
      "@electron-forge/maker-deb": "^7.7.0",
      "@electron-forge/maker-zip": "^7.6.0",
      "@electron-forge/publisher-github": "^7.7.0",
      "electron": "^33.2.1"
    },
    "config": {
      "forge": {
        "packagerConfig": {
          "arch": ["arm64", "x64"],
          "icon": "assets/AppIcon.icns"
        },
        "electronPackagerConfig": {
          "wine": "/opt/homebrew/bin/wine",
          "mono": "/opt/homebrew/bin/mono"
        },
        "makers": [
          {
            "name": "@electron-forge/maker-dmg",
            "platforms": ["darwin"],
            "config": {
              "format": "ULFO"
            }
          },
          {
            "name": "@electron-forge/maker-zip",
            "platforms": ["darwin", "win32", "linux"]
          },
          {
            "name": "@electron-forge/maker-squirrel",
            "platforms": ["win32"],
            "config": {
              "name": "FumbleNote",
              "setupIcon": "assets/AppIcon.ico"
            }
          },
          {
            "name": "@electron-forge/maker-deb",
            "platforms": ["linux"],
            "config": {
              "options": {
                "maintainer": "Adam Baker",
                "homepage": "https://github.com/abker0",
                "icon": "assets/AppIcon.png",
                "arch": ["arm64", "x64"]
              }
            }
          }
        ]
      }
    }
  }